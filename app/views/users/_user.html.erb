<div id="<%= dom_id user %>" class="border rounded my-5 p-5">
  <div class="row">
    <div class="col-1">
      <p class="text-muted">
        Name
      </p>
      <p class="text-muted">
        Books
      </p>
    </div>

    <div class="col">
      <p class="text-success">
        <%= user.name %>
      </p>
      <p class="text-success">
        <% unless user.books.present? %>
          NO BOOKS
        <% else %>
          <% user.books.each do |book| %>
            <%= book %>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>
